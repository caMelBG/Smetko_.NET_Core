@model IEnumerable<Order>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

@foreach (var order in Model)
{

    <div class="x_content">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => Model.First().OrderMeals.First().Meal.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => Model.First().OrderMeals.First().Quantity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => Model.First().OrderMeals.First().Meal.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => Model.First().OrderMeals.First().Meal.Weight)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var orderMeal in order.OrderMeals)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(model => orderMeal.Meal.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(model => orderMeal.Quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(model => orderMeal.Meal.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(model => orderMeal.Meal.Weight)
                        </td>
                    </tr>
                }
                <tr>
                    <td>
                        @Html.DisplayNameFor(model => order.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(model => order.Price)
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
}
