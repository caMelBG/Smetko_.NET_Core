@model int

@{
    Layout = "";
}

<div class="form-horizontal">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        @*<input type="hidden" name="Products[@Model].Id" class="productIdHidden" />*@
        @*<input type="hidden" name="Products[@Model].MealId" class="productIdHidden" />*@
        <label class="col-md-2 control-label">
            Product Name
        </label>
        <div class="col-md-5">
            <input name="Products[@Model].Product.ProductName" class="productName" />
        </div>
        <label class="col-md-1 control-label">
            Quantity
        </label>
        <div class="col-md-4">
            <input name="Products[@Model].Quantity" class="" />
        </div>
    </div>
</div>

<script>
    $.get("AvaiableProductsNames", function (data, status) {
        $(".productName").autocomplete({
            source: data
        });
    });
</script>